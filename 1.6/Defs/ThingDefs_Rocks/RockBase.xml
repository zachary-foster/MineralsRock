<?xml version="1.0" encoding="UTF-8"?>
<Defs>

  <ThingDef Name="MR_UglyRockBase" ParentName="UglyRockBase"  Abstract="True">
  </ThingDef>
  
  
  <ThingDef Name="ImpassableRockBase" ParentName="MF_StaticMineralBase" Class="MineralsFramework.ThingDef_StaticMineral" Abstract="True">
    <drawerType>MapMeshOnly</drawerType>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <filthLeaving>Filth_RubbleRock</filthLeaving>
    <altitudeLayer>Building</altitudeLayer>
    <passability>Impassable</passability>
    <castEdgeShadows>true</castEdgeShadows>
    <fillPercent>1</fillPercent>
    <coversFloor>true</coversFloor>
    <rotatable>true</rotatable>
    <saveCompressible>true</saveCompressible>
    <holdsRoof>true</holdsRoof>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <blockLight>true</blockLight>
    <blockWind>true</blockWind>
    <mineable>true</mineable>
    <hideAtSnowOrSandDepth>2</hideAtSnowOrSandDepth>
    <statBases>
      <Flammability>0</Flammability>
    </statBases>
    <building>
      <isInert>true</isInert>
      <canBuildNonEdificesUnder>false</canBuildNonEdificesUnder>
      <mineableDropChance>0.01</mineableDropChance>
      <mineableYield>1</mineableYield>
      <mineableNonMinedEfficiency>0</mineableNonMinedEfficiency>
      <claimable>false</claimable>
      <deconstructible>false</deconstructible>
      <isEdifice>true</isEdifice>
    </building>
    <!-- Tags which determine how some options behave  -->
    <tags>
      <li>rock</li>
      <li>wall</li>
    </tags>
    <!-- at what snow depth the snow texture is used, if it exists -->
    <snowTextureThreshold>0.8</snowTextureThreshold>
    <!-- at what snow depth the mineral is completely hidden -->
    <hiddenInSnowThreshold>999</hiddenInSnowThreshold>
  </ThingDef>
  
  
  <ThingDef Name="WeatheredRockBase" ParentName="ImpassableRockBase" Class="MineralsFramework.ThingDef_StaticMineral" Abstract="True">
    <graphicData>
      <shaderType>CutoutComplex</shaderType>
      <graphicClass>Graphic_Random</graphicClass>
      <drawSize>(4,4)</drawSize>
    </graphicData>
    <!-- Roof requirements -->
    <mustBeUnderRoof>false</mustBeUnderRoof>
    <mustBeUnderThickRoof>false</mustBeUnderThickRoof>
    <mustBeUnroofed>true</mustBeUnroofed>
    <mustBeNotUnderThickRoof>false</mustBeNotUnderThickRoof>
    <!-- The maximum number of images that will be printed per square -->
    <maxMeshCount>1</maxMeshCount>
    <!-- The size range -->
    <visualSizeRange>
      <min>1.75</min>
      <max>1.9</max>
    </visualSizeRange>
    <!-- between 0 and 1. 0 = uniform distribution, 1 = normal distribution -->
    <visualClustering>1.0</visualClustering>
    <!-- 1 = everything appears within cell and can spawn at edge when visualClustering == 0 -->
    <visualSpread>0.5</visualSpread>
    <visualSizeVariation>0.08</visualSizeVariation>
    <!-- How much to change the vertical position of the texture. Positive is up -->
    <verticalOffset>0.2</verticalOffset>
    <!-- Order in which minerals are spawned during map generation (lower numbers first) -->
    <newMapSpawnOrder>60</newMapSpawnOrder>
    <!-- at what snow depth the snow texture is used, if it exists -->
    <snowTextureThreshold>0.8</snowTextureThreshold>
  </ThingDef>
  
  
  <ThingDef Name="SolidRockBase" ParentName="ImpassableRockBase" Class="MineralsRock.ThingDef_SolidRock" Abstract="True">
    <thingClass>MineralsRock.SolidRock</thingClass>
    <graphicData>
      <shaderType>CutoutComplex</shaderType>
      <graphicClass>Graphic_Random</graphicClass>
      <drawSize>(4,4)</drawSize>
    </graphicData>
    <!-- Roof requirements -->
    <mustBeUnderRoof>true</mustBeUnderRoof>
    <mustBeUnderThickRoof>false</mustBeUnderThickRoof>
    <mustBeUnroofed>false</mustBeUnroofed>
    <mustBeNotUnderThickRoof>true</mustBeNotUnderThickRoof>
    <!-- The maximum number of images that will be printed per square -->
    <maxMeshCount>1</maxMeshCount>
    <!-- The size range -->
    <visualSizeRange>
      <min>1.75</min>
      <max>1.9</max>
    </visualSizeRange>
    <!-- between 0 and 1. 0 = uniform distribution, 1 = normal distribution -->
    <visualClustering>1.0</visualClustering>
    <!-- 1 = everything appears within cell and can spawn at edge when visualClustering == 0 -->
    <visualSpread>0.5</visualSpread>
    <visualSizeVariation>0.08</visualSizeVariation>
    <!-- How much to change the vertical position of the texture. Positive is up -->
    <verticalOffset>0.2</verticalOffset>
    <!-- Order in which minerals are spawned during map generation (lower numbers first) -->
    <newMapSpawnOrder>50</newMapSpawnOrder>
    <building>
      <mineablePreventMeteorite>false</mineablePreventMeteorite>
    </building>
    <!-- at what snow depth the snow texture is used, if it exists -->
    <snowTextureThreshold>1</snowTextureThreshold>
  </ThingDef>
  
  
  <ThingDef Name="HewnRockBase" ParentName="ImpassableRockBase" Class="MineralsFramework.ThingDef_StaticMineral" Abstract="True">
    <graphicData>
      <shaderType>CutoutComplex</shaderType>
			<graphicClass>Graphic_Random</graphicClass>
			<linkType>CornerFiller</linkType>
			<linkFlags>
				<li>Wall</li>
        <li>Rock</li>
        <li>MapEdge</li>
			</linkFlags>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
				<edgeTop>Damage/Edge</edgeTop>
				<edgeBot>Damage/Edge</edgeBot>
				<edgeLeft>Damage/Edge</edgeLeft>
				<edgeRight>Damage/Edge</edgeRight>
			</damageData>
    </graphicData>
    <uiIconPath>Things/Rock/HewnRockWall/HewnRockWallA</uiIconPath>
    <!--How far away it can spawn from an existing location-->
    <!-- Even though it is a static crystal, the map initialization uses "reproduction" to make clusters-->
    <spawnRadius>1</spawnRadius>
    <!-- The probability that this mineral type will be spawned at all on a given map -->
    <perMapProbability>0</perMapProbability>
    <!--For a given map, the minimum/maximum probablility a cluster will spawn for every possible location -->
    <minClusterProbability>0</minClusterProbability>
    <maxClusterProbability>0</maxClusterProbability>
    <!-- How  many squares each cluster will be -->
    <minClusterSize>1</minClusterSize>
    <maxClusterSize>10</maxClusterSize>
    <!-- The range of starting sizes of individuals in clusters -->
    <initialSizeMin>1</initialSizeMin>
    <initialSizeMax>1</initialSizeMax>
    <!-- How much initial sizes of individuals randomly vary -->
    <initialSizeVariation>.3</initialSizeVariation>
    <!-- how far away it can be from needed nearby terrains-->
    <neededNearbyTerrainRadius>1</neededNearbyTerrainRadius>
    <!-- If true, growth rate and initial size depends on distance from needed terrains -->
    <neededNearbyTerrainSizeEffect>false</neededNearbyTerrainSizeEffect>
    <!-- The maximum number of images that will be printed per square -->
    <maxMeshCount>1</maxMeshCount>
    <!-- The size range -->
    <visualSizeRange>
      <min>1</min>
      <max>1</max>
    </visualSizeRange>
    <visualClustering>1.0</visualClustering>
    <!-- between 0 and 1. 0 = uniform distribution, 1 = normal distribution -->
    <visualSpread>0</visualSpread>
    <!-- 1 = everything appears within cell and can spawn at edge when visualClustering == 0 -->
    <visualSizeVariation>0</visualSizeVariation>
    <!-- Tags which determine how some options behave  -->
    <tags>
      <li>rock</li>
      <li>wall</li>
      <li>hewn</li>
    </tags>
    <!-- Roof requirements -->
    <mustBeUnderRoof>false</mustBeUnderRoof>
    <mustBeUnderThickRoof>true</mustBeUnderThickRoof>
    <mustBeUnroofed>false</mustBeUnroofed>
    <mustBeNotUnderThickRoof>false</mustBeNotUnderThickRoof>
    <!-- Order in which minerals are spawned during map generation (lower numbers first) -->
    <newMapSpawnOrder>40</newMapSpawnOrder>
  </ThingDef>
  

  <ThingDef Name="PassableRockBase" ParentName="MF_StaticMineralBase" Class="MineralsFramework.ThingDef_StaticMineral" Abstract="True">
    <graphicData>
      <shaderType>CutoutComplex</shaderType>
      <graphicClass>Graphic_Random</graphicClass>
      <drawSize>(1.5,1.5)</drawSize>
    </graphicData>
    <holdsRoof>false</holdsRoof>
    <blockLight>false</blockLight>
    <altitudeLayer>SmallWire</altitudeLayer>
    <building>
      <mineableYield>1</mineableYield>
      <ai_neverTrashThis>true</ai_neverTrashThis>
    </building>
    <!-- The terrains this can appear on. The default is rocky terrains-->
		<allowedTerrains>
		</allowedTerrains>
    <!-- at what snow depth the snow texture is used, if it exists -->
    <snowTextureThreshold>0.7</snowTextureThreshold>
    <!-- at what snow depth the mineral is completely hidden -->
    <hiddenInSnowThreshold>0.8</hiddenInSnowThreshold>
  </ThingDef>
  

  <ThingDef Name="SmallRockBase" ParentName="PassableRockBase" Class="MineralsFramework.ThingDef_StaticMineral" Abstract="True">
    <fillPercent>0.2</fillPercent>
    <hideAtSnowOrSandDepth>1.1</hideAtSnowOrSandDepth>
    <blockWind>false</blockWind>
    <pathCost>20</pathCost>
    <!-- If smaller than 1, it looks smaller in water -->
    <submergedSize>0</submergedSize>
    <submergedRadius>1</submergedRadius>
    <!-- Tags which determine how some options behave  -->
    <tags>
      <li>rock</li>
      <li>small_rock</li>
    </tags>
    <!-- at what snow depth the snow texture is used, if it exists -->
    <snowTextureThreshold>0.7</snowTextureThreshold>
    <!-- Order in which minerals are spawned during map generation (lower numbers first) -->
    <newMapSpawnOrder>80</newMapSpawnOrder>
    <!-- at what snow depth the snow texture is used, if it exists -->
    <snowTextureThreshold>0.6</snowTextureThreshold>
    <!-- at what snow depth the mineral is completely hidden -->
    <hiddenInSnowThreshold>0.8</hiddenInSnowThreshold>
  </ThingDef>
  
  
  <ThingDef Name="BoulderRockBase" ParentName="PassableRockBase" Class="MineralsFramework.ThingDef_StaticMineral" Abstract="True">
    <fillPercent>0.6</fillPercent>
    <hideAtSnowOrSandDepth>2</hideAtSnowOrSandDepth>
    <passability>PassThroughOnly</passability>
    <blockWind>true</blockWind>
    <pathCost>100</pathCost>
    <altitudeLayer>LowPlant</altitudeLayer>
    <!-- If smaller than 1, it looks smaller in water -->
    <submergedSize>1</submergedSize>
    <submergedRadius>1</submergedRadius>
    <!-- Tags which determine how some options behave  -->
    <tags>
      <li>rock</li>
      <li>boulder</li>
    </tags>
    <!-- at what snow depth the snow texture is used, if it exists -->
    <snowTextureThreshold>0.8</snowTextureThreshold>
    <!-- If textures overlapping walls above them should be printed on top -->
    <printOverWalls>true</printOverWalls>
    <!-- Order in which minerals are spawned during map generation (lower numbers first) -->
    <newMapSpawnOrder>70</newMapSpawnOrder>
    <!-- at what snow depth the snow texture is used, if it exists -->
    <snowTextureThreshold>0.7</snowTextureThreshold>
    <!-- at what snow depth the mineral is completely hidden -->
    <hiddenInSnowThreshold>1</hiddenInSnowThreshold>
  </ThingDef>
  
  
</Defs>
