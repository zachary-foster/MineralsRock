<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  
  <ThingDef Name="MR_VacstoneBase" ParentName="MR_UglyRockBase">
    <defName>MR_VacstoneBase</defName>
    <label>Vacstone</label>
    <description>A dense volcanic rock formed under extreme vacuum conditions, exhibiting unusual crystalline structures from rapid depressurization cooling. Its low porosity makes it exceptionally durable.</description>
    <graphicData>
      <color>(40,40,40)</color>
    </graphicData>
    <statBases>
      <MaxHitPoints>1800</MaxHitPoints>
    </statBases>
    <building>
      <mineableThing>MR_ChunkVacstone</mineableThing>
      <mineableDropChance>0.35</mineableDropChance>
    </building>
  </ThingDef>

  <ThingDef Name="WeatheredVacstone" ParentName="WeatheredRockBase" Class="MineralsFramework.ThingDef_StaticMineral">
    <defName>WeatheredVacstone</defName>
    <label>Weathered Vacstone</label>
    <description>Pitted vacstone formations showing characteristic surface vesiculation patterns from ancient volcanic outgassing events. Despite erosion, the underlying matrix remains remarkably intact.</description>
    <graphicData>
      <texPath>Things/Rock/WeatheredBasalt</texPath>
      <color>(40,40,40)</color>
    </graphicData>
    <uiIconPath>Things/Rock/WeatheredBasalt/WeatheredBasaltA</uiIconPath>
    <statBases>
      <MaxHitPoints>1650</MaxHitPoints>
      <Flammability>0</Flammability>
      <Beauty>-1</Beauty>
    </statBases>
    <building>
      <mineableThing>MR_ChunkVacstone</mineableThing>
      <mineableDropChance>0.35</mineableDropChance>
    </building>
    <spawnRadius>1.5</spawnRadius>
    <perMapProbability>1</perMapProbability>
    <minClusterProbability>0.015</minClusterProbability>
    <maxClusterProbability>0.025</maxClusterProbability>
    <allowedTerrains>
      <li>MR_VacstoneBase_Rough</li>
		</allowedTerrains>
    <randomlyDropResources>
      <li>
        <ResourceDefName>RoughGem</ResourceDefName>
        <DropProbability>0.035</DropProbability>
        <MinMiningSkill>7</MinMiningSkill>
      </li>
      <li>
        <ResourceDefName>CrushedStone</ResourceDefName>
        <DropProbability>1</DropProbability>
        <CountPerDrop>5</CountPerDrop>
        <WasteProduct>true</WasteProduct>
      </li>
      <li>
        <ResourceDefName>MAU_SharpStoneShard</ResourceDefName>
        <DropProbability>0.12</DropProbability>
        <CountPerDrop>1</CountPerDrop>
      </li>
    </randomlyDropResources>
    <tags>
      <li>rock</li>
      <li>wall</li>
      <li>weathered</li>
    </tags>
    <mineSpeedFactor>0.75</mineSpeedFactor>
  </ThingDef>
  
