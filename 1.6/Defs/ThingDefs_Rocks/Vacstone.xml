      <MaxHitPoints>1900</MaxHitPoints>
      <Flammability>0</Flammability>
      <Beauty>-1</Beauty>
    </statBases>
    <building>
      <mineableThing>MR_ChunkVacstone</mineableThing>
      <mineableDropChance>0.35</mineableDropChance>
    </building>
    <randomlyDropResources>
      <li>
        <ResourceDefName>RoughGem</ResourceDefName>
        <DropProbability>0.04</DropProbability>
