  <RecipeDef ParentName="MakeStoneBlocksBase">
    <defName>Make_StoneBlocksVacstone</defName>
    <label>Make Vacstone Blocks</label>
    <description>Process vacstone chunks into construction-grade blocks. Requires diamond-tipped tools due to extreme hardness.</description>
    <recipeUsers>
      <li>TableMachining</li>
      <li>TableStonecutter</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MR_ChunkVacstone</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <MR_BlocksVacstone>18</MR_BlocksVacstone>
    </products>
  </RecipeDef>
  
</Defs>
